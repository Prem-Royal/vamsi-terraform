vi provider.tf
terraform {
  required_providers {
    aws = {
      source = "hashicorp/aws"
      version = "5.41.0"
    }
  }
}

provider "aws" {
  # Configuration options
profile = "default"
region = "us-west-2"
}
vi resource.tf
resource "aws_instance" "va" {
ami = "ami-08116b9957a259459"
instance_type = "t2.micro"
key_name = "linux"
tags= {
Name = "vamsi11"
}
}
terraform init
terraform validate
terraform plan
terraform apply
terraform taint aws_instance.va
terraform untaint aws_instance.va
